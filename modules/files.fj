
import builtin

files: :{}

files.read: $builtin.read
files.write: $builtin.write
// todo: files.append?
files.ls: {
    (. builtin.dir filter {.get(0) != '.'})
}

files.join: {
    filter {len > 0}
    map {s => $s dup .endswith! '/' else '/'} cat
    dup len > 1 then {.droptail(1)}
}

Path: :{}
Path.new: {:{str >>s} as $Path}
Path._div: {Path.new($self.s . files.join)}
Path._str: {$self.s}
files.path: $Path.new
files.mkdir: $builtin.mkdir

_export: $files
