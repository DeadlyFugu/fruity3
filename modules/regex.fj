import pcre2

regex: :{}

regex.match: { pattern s =>
    (
        $pattern $s pcre2.match
        zip {s.sub}
        size > 1 then {under pop}
        empty then nil
    )
}

_test: {
    regex.match('^[\\s]*(.*?)[\\s]*$' '   hello world!  ')
}

